<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title"
    android:orientation="vertical"
    tools:context="com.example.fearless.invite.ui.ThirdFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="邀约活动"
            android:textColor="@color/black"
            android:textSize="@dimen/xxx_large_sp" />
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="@dimen/backbtn_width"
            android:id="@+id/add_invite"
            android:src="@drawable/nav_add"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            />

    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_border" />

    <com.example.fearless.widget.XListView
        android:id="@+id/invite_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


      />


</LinearLayout>
